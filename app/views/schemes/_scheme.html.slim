li.scheme
  h3
    = link_to scheme.name, scheme.website

  p
    = scheme.description

  = link_to "Leave feedback",
             [:new, scheme, :feedback],
             class: "btn",
             data: { action: "leave_feedback" }
  = link_to "View feeback",
            [scheme, :feedbacks],
            class: "btn",
            data: { action: "show_feedback" }