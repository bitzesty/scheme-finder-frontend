= simple_form_for search,
                  as: :search,
                  url: url,
                  method: :get,
                  remote: remote,
                  defaults: { wrapper_html: { class: "filter" } },
                  html: { class: "horizontal-form scheme-search-form" } do |f|

  fieldset
    div data-wraps="had-direct-interactions"
      = f.input :had_direct_interactions,
                as: :boolean,
                label: had_direct_interactions_label,
                hint: "For evaluation purposes",
                input_html: { data: { register: "had-direct-interactions" } }

    = f.input :locations,
              as: :grouped_select,
              group_method: :last,
              label: 'Locations',
              collection: Location.collection,
              required: false,
              input_html: { class: "multi-row-select js-select2", multiple: true }

    = f.input :sectors,
              as: :multi_select,
              label: 'Sectors',
              collection: Sector.collection,
              required: false,
              input_html: { class: "multi-row-select" }

    - for_teachers do
      = f.input :subjects,
                as: :multi_select,
                label: "Subjects",
                collection: Subject.collection,
                required: false,
                input_html: { class: "multi-row-select" }

    - unless current_audience
      = f.input :audiences,
                as: :multi_select,
                label: 'Audiences',
                collection: Audience.collection,
                required: false,
                input_html: { class: "multi-row-select" }

    = f.input :activities,
              as: :multi_select,
              collection: Activity.collection,
              label: 'Activities',
              label_method: "for_#{current_audience}",
              required: false,
              input_html: { class: "multi-row-select" }

    = f.input :age_ranges,
              as: :multi_select,
              label: age_range_label,
              collection: AgeRange.collection,
              required: false,
              input_html: { class: "multi-row-select" }

  - for_mobile do
    .form-actions
      = f.button :submit, "Search for Schemes",
                 class: "button btn btn-primary",
                 id: "submit_btn",
                 data: { action: "submit",
                         ga_search_scheme_click: "true" }
