= simple_form_for search,
                  as: :search,
                  url: search_schemes_path,
                  method: :get,
                  remote: true,
                  defaults: { wrapper_html: { class: "filter" } },
                  html: { class: "horizontal-form scheme-search-form" } do |f|

  fieldset
    = f.input :had_direct_interactions,
              as: :boolean,
              label: had_direct_interactions_label

    = f.input :locations,
              as: :grouped_select,
              group_method: :last,
              label: 'Locations',
              collection: Location.collection,
              required: false,
              input_html: { class: "multi-row-select js-select2", multiple: true }

    = f.input :sectors,
              as: :multi_select,
              label: 'Sectors',
              collection: Sector.collection,
              required: false,
              input_html: { class: "multi-row-select" }

    - for_businesses do
      = f.input :commitment_lengths,
                as: :multi_select,
                label: 'Commitment length',
                collection: CommitmentLength.collection,
                label: "Length of commitment",
                required: false,
                input_html: { class: "multi-row-select" }

    = f.input :activities,
              as: :multi_select,
              collection: Activity.collection,
              label: 'Activities',
              required: false,
              input_html: { class: "multi-row-select" }

    - for_businesses do
      = f.input :company_sizes,
                as: :multi_select,
                collection: CompanySize.collection,
                label: 'Company size',
                required: false,
                input_html: { class: "multi-row-select" }

    = f.input :age_ranges,
              as: :multi_select,
              label: age_range_label,
              collection: AgeRange.collection,
              required: false,
              input_html: { class: "multi-row-select" }

  .form-actions.hide.mobile-show
    = f.button :submit, "Search for Schemes",
               class: "button btn btn-primary",
               id: "submit_btn",
               data: { action: "submit" }
